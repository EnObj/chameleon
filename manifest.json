{
    "name": "网站新皮肤",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "一键给网站换装，新皮肤随心换。",
    "icons": {
        "16": "icons/logo16.png",
        "32": "icons/logo32.png",
        "48": "icons/logo48.png",
        "120": "icons/logo120.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "run_at": "document_start",
        "js": ["js/jquery-3.6.0.min.js", "content-scripts/content.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "storage"]
}